@page
@model Library.App.Pages.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input asp-for="Title" type="text" class="form-control" id="title" aria-describedby="title" placeholder="Title">
    </div>
    <div class="form-group">
        <label for="author">Author</label>
        <input asp-for="Author.Name" type="text" class="form-control" id="author" placeholder="Author">
    </div>
    <div class="form-group">
        <label for="imageUrl">Cover image url</label>
        <input asp-for="ImageUrl" type="text" class="form-control" id="imageUrl" placeholder="imageUrl">
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea asp-for="Description" type="text" class="form-control" id="Description" placeholder="Description"> </textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

